@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Events</h2>
<p>
    @Html.ActionLink("New Event", "New", "Events", null, new { @class = "btn btn-primary" })
</p>
<table id="events" class="table	table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>DateTime</th>
            <th>Location</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#events").DataTable({
                ajax: {
                    url: "/api/events",
                    dataSrc : ""
                },
                columns: [
                    {
                        data: "id",
                        render: function (data, type, event) {
                            return "<a href='/events/edit/" + event.id + "'>" + event.id+ "</a>";
                        }
                    },
                    {
                        data: "dateTime"
                    },
                    {
                        data: "location"
                    },
                    {
                        data: "status",
                        render: function (data) {
                        }
                    }
                ]
            });
        });
    </script>
}